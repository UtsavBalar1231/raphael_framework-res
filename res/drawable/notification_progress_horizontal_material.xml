<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="fill_horizontal|center" android:id="@id/background">
        <shape android:shape="rectangle">
            <size android:height="@dimen/progress_bar_height_material" />
            <solid android:color="@color/notification_progress_horizontal_bg_color" />
            <corners android:radius="6.669983dip" />
        </shape>
    </item>
    <item android:gravity="fill_horizontal|center" android:id="@id/secondaryProgress">
        <scale android:scaleWidth="100%">
            <shape android:shape="rectangle">
                <size android:height="@dimen/progress_bar_height_material" />
                <solid android:color="@color/notification_progress_horizontal_bg_color" />
                <corners android:radius="6.669983dip" />
            </shape>
        </scale>
    </item>
    <item android:gravity="fill_horizontal|center" android:id="@id/progress">
        <scale android:scaleWidth="100%">
            <shape android:shape="rectangle">
                <size android:height="@dimen/progress_bar_height_material" />
                <solid android:color="@color/notification_progress_horizontal_progress_color" />
                <corners android:radius="6.669983dip" />
            </shape>
        </scale>
    </item>
</layer-list>